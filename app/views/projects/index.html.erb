<h1>Seznam projektů
  <%= link_to new_project_path, class: "glyphicon glyphicon-plus btn btn-success pull-right" do %>
  Přidat nový projekt
  <% end %>
</h1> 


<div class="row">
   <% @projects.each do |project| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag project.image_url %>
        <div class="caption">
          <h3><%= project.name %></h3>
          <p><%= project.description%></p>
          <%= link_to  project, class: "glyphicon glyphicon-play btn btn-primary" do %>
            Vstoupit do hry
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
