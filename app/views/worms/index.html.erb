<h1>Listing worms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Project id=int</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worms.each do |worm| %>
      <tr>
        <td><%= worm.name %></td>
        <td><%= worm.description %></td>
        <td><%= worm.project.name if worm.project %></td>
        <td><%= link_to 'Show', worm %></td>
        <td><%= link_to 'Edit', edit_worm_path(worm) %></td>
        <td><%= link_to 'Destroy', worm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

